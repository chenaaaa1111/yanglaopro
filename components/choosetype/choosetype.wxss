/* components/choose-type/chooseType.wxss */
.hidden {
  display: none;
}
.care-type {
  border-top: 2rpx solid #f6f6f6;
}

.care-type .itemType {
  width: 100%;
  line-height: 88rpx;
  border-bottom: 2rpx solid #f6f6f6;
  text-align: center;
  font-size: 32rpx;
}

.care-type .itemType label {
  display: inline-block;
  width: 100%;
  height: 100%;
  position: relative;
}

.care-type .itemType label .normal {
  display: none;
}

.care-type .active {
  color: #ff4848;
}

.care-type .active label .checked-icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 30rpx;
  right: 40rpx;
  display: block;
}

.care-type .confirm-btn {
  margin: 24rpx auto;
  width: 690rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  background: #f33;
  color: #fff;
}