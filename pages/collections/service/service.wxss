.container {
    width: 100%; height: 100%; overflow-y: auto; overflow-x: hidden;
}
.xlListBox {
    width: 100%;
}

.xlListBox .xlDetailBox2 {
    width: 100%; height: 260rpx; box-sizing: border-box; position: relative; padding: 40rpx; background: #FFF;
    z-index: 1000;
}
.xlListBox .xlDetailBox2::after {
    content: ''; width: calc(100% - 40rpx); height: 1px; background: #ccc; position: absolute; left: 20rpx; bottom: 0;
}
.xlListBox .xlDetailBox2 .xlImgBox {
    width: 240rpx; height: 180rpx; overflow: hidden; position: absolute; left: 40rpx; top: 40rpx; z-index: 2;
}
.xlListBox .xlDetailBox2 .xlImgBox .xlDetailImg {
    width: 100%; height: 100%; 
}
.xlListBox .xlDetailBox2 .xlTextBox {
    width: calc(100% - 340rpx); height: 180rpx; overflow: hidden;
    position: absolute; left: 300rpx; top: 40rpx; z-index: 1;
}
.xlListBox .xlDetailBox2 .xlTextBox .xlTitle {
    width: 100%; height: 88rpx; line-height: 44rpx; margin-bottom: 8rpx; overflow: hidden; font-size: 32rpx; font-weight: bold; color: #333;
    word-break:break-all; white-space:normal; 
}
.xlListBox .xlDetailBox2 .xlTextBox .xlPosition {
    width: 100%; height: 40rpx; line-height: 40rpx; font-size: 28rpx; color: #999; overflow: hidden;
}
.xlListBox .xlDetailBox2 .xlTextBox .xlCompany {
    width: 100%; height: 40rpx; line-height: 40rpx; font-size: 28rpx; color: #999; overflow: hidden;
}


.xlNoDataBox {
    width: 100%; height: 80rpx; line-height: 80rpx; margin-top: 400rpx; text-align: center;
}