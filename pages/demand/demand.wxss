.container {
    width: 100%; padding: 20rpx 0; box-sizing: border-box;
}
.xlPickBox1 {
    border-bottom: 1px solid #DBDBDB; margin-bottom: 20rpx;
}
.xlPickBox1 .xlTitle {
    height: 80rpx; line-height: 80rpx; padding: 0 30rpx;
}
.xlPickBox1 .xlTitleText {
    font-size: 40rpx; color: #333; font-weight: 500;
}
.xlPickBox1 .xlListBox {
    width: calc(100% - 60rpx); line-height: 60rpx; margin-left: 30rpx; padding: 20rpx 0;
    display: flex; justify-content: flex-start; align-content: flex-start; flex-wrap: wrap;
}
.xlPickBox1 .xlListBox .xlList {
    margin-bottom: 16rpx; border-radius: 8rpx; margin-right: 3%;
    background: #F4F4F4; color: #4A4A4A; font-size: 30rpx; min-width: 30%;
    text-align: center; line-height: 60rpx; height: 60rpx;
}
.xlPickBox1 .xlListBox .xlList.xlActive {
    background: #FCD1CC; color: #FD6E6C;
}

.xlInputBox1 {
    border-bottom: 1rpx solid #DBDBDB; margin-bottom: 20rpx; padding: 0 20rpx 20rpx;
    height: 60rpx; line-height: 60rpx;
}
.xlInputBox1 .xlTitle {
    width: 200rpx; font-size: 40rpx; color: #333; font-weight: 500; 
    display: inline-block; vertical-align: middle;
}
.xlInputBox1 .xlInput {
    width: calc(100% - 200rpx); height: 60rpx; display: inline-block; font-size: 30rpx; vertical-align: middle;
    color: #4A4A4A;
}

.xlSubmitBtn {
    width: calc(100% - 60rpx); margin-left: 30rpx; height: 100rpx; padding-top: 40rpx;
}
.xlSubmitBtn button {
    width: 100%; height: 100rpx; background: #FF3333; line-height: 100rpx; font-size: 36rpx; color: #FFF; border-radius: 0;
}
.xlOtherDemand {
    padding: 40rpx 0; border-bottom: 1rpx solid #DBDBDB;
}
.xlOtherDemand textarea {
    width: calc(100% - 60rpx); margin-left: 30rpx; height: 240rpx; line-height: 44rpx; 
    overflow-y: scroll; color:  #4A4A4A; font-size: 32rpx;
    border: 1px solid #DBDBDB; border-radius: 12rpx; padding: 20rpx; box-sizing: border-box; 
}